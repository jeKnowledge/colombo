<h1>Listing Consents</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consents.each do |consent| %>
      <tr>
        <td><%= consent.get_type %></td>
        <td><%= consent.description %></td>
        <% if !consent.active %>
          <td><%= link_to "Activate", toggle_admin_consents_path(consent.id) %></td>
        <% else %>
          <td><%= link_to "Deactivate", toggle_admin_consents_path(consent.id) %></td>
        <% end %>
        <td><%= link_to "Details", show_admin_consents_path(consent.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
