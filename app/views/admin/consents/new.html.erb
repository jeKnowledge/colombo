<h1>Edit Consent details</h1>

<%= render "shared/error_messages", resource: @consent %>

<%= form_for @consent, url: admin_consents_path do |f| %>
  <div class="field">
    <%= f.radio_button :type_id, "Terms" %>
    <%= f.label :type_id, "Terms" %>
    <%= f.radio_button :type_id, "Contract" %>
    <%= f.label :type_id, "Contract" %>
    <%= f.radio_button :type_id, "Cookies" %>
    <%= f.label :type_id, "Cookies" %>
  </div>

  <div class="field">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit "Create consent" %>
<% end %>
