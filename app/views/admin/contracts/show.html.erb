<h1>Contract</h1>

<label class="col-md-12"><%= l @contract.date %></label>

<div class="col-md-12"><%= Markdown.new(@contract.body).to_html.html_safe %></div>

<div class="col-md-12">
  <%= link_to "Select", contract_select_admin_path(@contract.id), class:"btn", method: :post unless @contract.active %>
  <%= link_to "Download", admin_contract_download_path(@contract.id), method: :post, class:"btn" %>
  <%= link_to "Edit", edit_admin_contract_path(@contract.id), class:"btn" %>
  <%= link_to "Delete", admin_contract_path(@contract.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn" %>
</div>