<% if @audit.is_a? Report %>
  <h1>Report details</h1>
<% else %>
  <h1>Plan details</h1>
<% end %>

<div class="form-material form-horizontal">
  <div class="form group">
    <label class="col-md-12">Products</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @audit.products %> </p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Price</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><<%= @audit.price %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Date</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= l @audit.date %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Summary</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @audit.summary %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Auditor</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= link_to @audit.auditor.username, admin_show_user_path(@audit.auditor_id) %></p>
    </div>
  </div>

<% if @audit.is_a? Report %>
  <div class="form group">
    <label class="col-md-12">Rating</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @audit.rating %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Upload date</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= l @audit.upload_date %></p>
    </div>
  </div>

  <div class="col-md-12">
    <p class="form-control form-control-line"><%= link_to "Download report", admin_download_audit_path(@audit.id), method: :post %></p>
  </div>
<% end %>


<% if @audit.validated %>
  <td><%= link_to "Invalidate", admin_invalidate_audit_path(@audit.id), method: :post %></td>
<% else %>
  <td><%= link_to "Validate", admin_validate_audit_path(@audit.id), method: :post %></td>
<% end %>
