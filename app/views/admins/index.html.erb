<h1>Admins</h1>

<div>
  <%= render "shared/error_messages", resource: @admin %>

  <%= form_for @admin, url: admin_path do |f| %>
    <%= f.email_field :email, placeholder: "New admin email" %>
    <%= f.submit "Create" %>
  <% end %>
</div>

<h1>Auditors</h1>

<%= form_with url: set_default_auditor_rating_admin_path do |f| %>
  <%= f.number_field :rating, in: 0..5, step: 0.1, min: 0, max: 5, value: Auditor::get_default_rating %>
  <%= f.submit "Set" %>
<% end %>

<div class="table-responsive">
  <table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auditors.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <% if user.validated %>
          <td><%= link_to "Invalidate", invalidate_user_admin_path(user.id), method: :post %></td>
        <% else %>
          <td><%= link_to "Validate", validate_user_admin_path(user.id), method: :post %></td>
        <% end %>
        <td><%= link_to "Details", show_user_admin_path(user.id) %></td>
        <td><%= link_to "Delete", delete_user_admin_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @auditors, param_name: :auditor_page %>
</div>

