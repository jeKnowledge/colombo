<h1>Listing Auditors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auditors.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <% if !user.validated %>
          <td><%= link_to "Validate", validate_user_admin_path(user.id) %></td>
        <% end %>
        <td><%= link_to "Details", show_user_admin_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @auditors, param_name: :auditor_page %>

