<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Site</th>
      <th>Address</th>
      <th>Date</th>
      <th>Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @audit.site %></td>
      <td><%= @audit.address %></td>
      <td><%= @audit.date %></td>
      <td><%= @audit.products %></td>
      <td><%= @audit.auditor.username %></td>
    </tr>
  </tbody>
</table>

<% if !@audit.validated %>
  <%= link_to "Validate", validate_audit_admin_path(@audit.id), method: :post %>
<% end %>
<br>
