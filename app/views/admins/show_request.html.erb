<h1>Request details</h1>

<div class="form-material form-horizontal">
  <div class="form group">
    <label class="col-md-12">Products</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @request.products %> </p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Address</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><<<%= @request.address %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Company</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @request.company %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Date</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @request.date %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Rating</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @report.rating %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Upload date</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= @report.upload_date %></p>
    </div>
  </div>

  <div class="form group">
    <label class="col-md-12">Client</label>
    <div class="col-md-12">
      <p class="form-control form-control-line"><%= link_to @request.client.username, show_user_admin_path(@request.client.id) %></p>
    </div>
  </div>
</div>
