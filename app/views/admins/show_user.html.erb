<h1>User Details</h1>

<b>Username: </b><%= @user.username %> <br>
<b>Email: </b><%= @user.email %> <br>
<b>First name: </b><%= @user.first_name %> <br>
<b>Last name: </b><%= @user.last_name %> <br>

<% if @user.is_a? Auditor %>
  <b>Rating: </b><%= @user.rating %> <br>
  <b>Qualifications: </b><%= @user.qualifications %> <br>
  <%= link_to "CV", @user.cv.url %>
<% else %>
  <b>Address: </b><%= @user.address%> <br>
  <b>Rating: </b><%= @user.rating %> <br>
<% end %>
<br>
<% if !@user.validated %>
  <%= link_to "Validate", validate_user_admin_path(@user.id), method: :post %>
<% end %>
<br>
