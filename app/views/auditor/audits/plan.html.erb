<h1>New audit plan</h1>

<%= render 'shared/error_messages', resource: @plan %>

<%= form_for @plan, url: plan_auditor_audits_path  do |f| %>
  <div>
    <%= f.label :site %>
    <%= f.text_field :site, placeholder: "google.com" %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: "2nd street" %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date, placeholder: "01/01/2020" %>
  </div>

  <div>
    <%= f.label :products %>
    <%= f.text_field :products, placeholder: "Paracetamol" %>
  </div>

  <%= f.submit "Send audit plan" %>
<% end %>
