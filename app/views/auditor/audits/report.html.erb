<h1>New audit report</h1>

<%= render 'shared/error_messages', resource: @report %>

<%= form_for @report, url: report_auditor_audits_path  do |f| %>
  <div>
    <%= f.label :site %>
    <%= f.text_field :site, placeholder: "google.com" %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: "2nd street" %>
  </div>

  <div>
    <%= f.label :products %>
    <%= f.text_field :products, placeholder: "Paracetamol" %>
  </div>

  <%= f.submit "Send audit report" %>
<% end %>
