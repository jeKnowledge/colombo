<h1>New audit report</h1>

<%= render 'shared/error_messages', resource: @report %>

<%= form_for @report, url: report_auditor_audits_path, multipart: true  do |f| %>
  <div>
    <%= f.label :products %>
    <%= f.text_field :products, placeholder: "Paracetamol" %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= f.label :summary %>
    <%= f.text_field :summary, placeholder: "Audit for paracetamol" %>
  </div>

  <div>
    <%= f.label :report %>
    <%= f.file_field :report %>
  </div>

  <%= f.submit "Send audit report" %>
<% end %>
