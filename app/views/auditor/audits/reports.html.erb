<h1>My report list</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Products</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Summary</th>
      <th>Upload date</th>
      <th>Validated</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.products %></td>
        <td><%= report.price %></td>
        <td><%= report.rating %></td>
        <td><%= report.summary %></td>
        <td><%= l report.upload_date %></td>
        <td><%= report.validated %></td>
        <td><%= link_to "Details", auditor_show_report_path(report.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
