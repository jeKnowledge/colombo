<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="/plugins/images/logo.png">
    <title>Colombo</title>
    <!-- Bootstrap Core CSS -->
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Menu CSS -->
    <link href="/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="/css/animate.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="/css/colors/default.css" id="theme" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
</head>

<body class="fix-header">
    <!-- ============================================================== -->
    <!-- Preloader -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Wrapper -->
    <!-- ============================================================== -->
    <div id="wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <!-- End Top Navigation -->
        <!-- ============================================================== -->

        <!-- ============================================================== -->
        <!-- Page Content -->
        <!-- ============================================================== -->
                <h1 class="box-title" style="text-align:center">Sign up as a Auditor</h1> </div>
                <div class="row">
                    <div class="col-md-8" style="left:25px;">
                        <div class="pink-box">
                            <%= render "shared/error_messages", resource: @auditor %>

                            <%= form_for @auditor, url: auditor_sign_up_path, multipart: true do |f| %>
                            <div class="form-material form-horizontal">
                                <div class="form-group">
                                  <%= f.label :name, "Full name", class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.text_field :name, placeholder: "Full name", class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <%= f.label :email, "Email", class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.text_field :email, placeholder: "Email", class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <%= f.label :address, class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.text_field :address, placeholder: "Address", class:"form-control form-control-line" %>
                                  </div>
                                </div>


                                <div class="form-group">
                                  <%= f.label :company, class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.text_field :company, placeholder: "Company", class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <%= f.label :qualifications, "Qualifications", class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.text_field :qualifications, placeholder: "Qualifications", class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <label class="col-md-12">Country</label>

                                  <div class="col-md-12">
                                    <%= f.country_select :country, {}, class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <%= f.label :cv, "CV", class:"col-md-12" %>
                                  <div class="col-md-12">
                                    <%= f.file_field :cv, class:"form-control form-control-line" %>
                                    <%= f.hidden_field :cv_cache, class:"form-control form-control-line" %>
                                  </div>
                                </div>

                                <%= f.submit "Sign up", class:"btn", style:"margin-bottom:1em" %>
                            <% end %>
                          </div>
                            <p class="change_link">
                              Not a member yet ? Join us:
                              <%= link_to "Client", client_sign_up_path %> or
                              <%= link_to "Auditor", auditor_sign_up_path %> ?
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page Content -->
        <!-- ============================================================== -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <!--slimscroll JavaScript -->
    <script src="/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="/js/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/js/custom.min.js"></script>
</body>

</html>
