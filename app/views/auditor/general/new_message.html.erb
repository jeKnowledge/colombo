<h1>New message</h1>

<%= render "shared/error_messages", resource: @message %>

<%= form_for @message, url: auditor_messages_path do |f| %>
<div class="form-material form-horizontal">
  <div class="form-group">
    <%= f.label :audit, class:"col-md-12" %>
    <div class="col-md-12">
      <%= f.select :client_audit_ids, options_for_select(@clients_audits), class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, class:"col-md-12" %>
    <div class="col-md-12">
      <%= f.text_area :body, rows: 10, class:"form-control form-control-line" %>
    </div>
  </div>

  <%= f.submit "Send message", class:"btn" %>
</div>
<% end %>
