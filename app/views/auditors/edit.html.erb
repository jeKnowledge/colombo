<h1>Edit account details</h1>

<%= render "shared/error_messages", resource: @auditor %>

<%= form_for @auditor do |f| %>
<div class="form-material form-horizontal">
  <div class="form-group">
    <%= f.label :first_name, "First name" %>
    <div class="col-md-12">
      <%= f.text_field :first_name, placeholder: "James", class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Last name" %>
    <div class="col-md-12">
      <%= f.text_field :last_name, placeholder: "Bond", class:"form-control form-control-line"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email" %>
    <div class="col-md-12">
      <%= f.email_field :email, placeholder: "james_bond@secret_agent.corp", class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <div class="col-md-12">
      <%= f.text_field :address, placeholder: "Second street", class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :company %>
    <div class="col-md-12">
      <%= f.text_field :company, placeholder: "E-Corporation", class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :qualifications, "Qualifications" %>
    <div class="col-md-12">
      <%= f.text_field :qualifications, placeholder: "Senior agent", class:"form-control form-control-line" %>
    </div>
  </div>
</div>
  <%= f.submit "Update account", class:"btn" %>
<% end %>
