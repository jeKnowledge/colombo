<h1>New message</h1>

<%= render "shared/error_messages", resource: @message %>

<%= form_for @message, url: client_messages_path do |f| %>
<div class="form-material form-horizontal">
  <div class="form-group">
    <%= f.label :audit %>
    <div class="col-md-12">
      <%= f.select :audit_id, options_from_collection_for_select(@audits, 'id', 'products'), class:"form-control form-control-line" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <div class="col-md-12">
      <%= f.text_area :body, rows: 10, class:"form-control form-control-line" %>
    </div>
  </div>

  <%= f.submit "Send message", class:"btn" %>
</div>
<% end %>