      <div id="page-wrapper" style="margin-top: 0px;">
        <div class="container-fluid">
          <br>
          <h1 class="box-title">Sign up as a Client</h1> </div>
        <div class="row">
          <div class="col-md-8" style="left:25px;">
            <div class="white-box">
              <form id="signupclientform" action="/client/sign_up" method="post" enctype="multipart/form-data">
                <p>
                  <label for="first_name" class="uname" data-icon="u">First name</label>
                  <input id="first_name" name="first_name" required="required" type="text" placeholder="James" style="width:250px;"/>
                </p>

                <p>
                  <label for="last_name" class="uname" data-icon="u">Last name</label>
                  <input id="last_name" name="last_name" required="required" type="text" placeholder="Bond" style="width:250px;"/>
                </p>

                <p>
                  <label for="email" class="youmail" data-icon="e" >Email</label>
                  <input id="email" name="email" required="required" type="email" placeholder="mysupermail@mail.com" style="width:250px;"/>
                </p>

                <p>
                  <label for="address" class="youmail" data-icon="e" >Address</label>
                  <input id="address" name="address" required="required" type="text" placeholder="National road" style="width:250px;"/>
                </p>

                <p>
                  <label for="password" class="youpasswd" data-icon="p">Password</label>
                  <input id="password" name="password" required="required" type="password" placeholder="eg. X8df!90EO" style="width:250px;"/>
                </p>

                <p>
                  <label for="confirm_password" class="youpasswd" data-icon="p">Confirm password </label>
                  <input id="confirm_password" name="confirm_password" required="required" type="password" placeholder="eg. X8df!90EO" style="width:250px;"/>
                </p>

                <p>
                  <label for="cv" class="youcv" data-icon="e" >CV</label>
                  <input id="cv" name="cv" required="required" type="file" style="width:250px;"/>
                </p>

                <p>
                  <label for="accept_terms" class="youacceptterms" data-icon="e">Accept <a href="/terms">terms</a></label>
                  <input id="accept_terms" name="accept_terms" type="checkbox" style="width:250px;"/>
                </p>
                <!--<p class="signin button">
