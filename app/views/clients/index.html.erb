<%= render partial: '/clients/shared/sidebar' %>

<h1>Search audit</h1>

<%= form_tag search_client_audits_path, method: :get do %>
  <%= text_field_tag :query %>

  <%= submit_tag "Search" %>  
<% end %>

<h2>Advanced search</h2>

<%= form_tag advanced_search_client_audits_path, method: :get do %>
  <div>
    <%= label_tag :company %>
    <%= text_field_tag :company %>
  </div>

  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address %>
  </div>

  <div>
    <%= label_tag :products %>
    <%= text_field_tag :products %>
  </div>

  <%= submit_tag "Advanced search" %>  
<% end %>